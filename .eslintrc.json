{
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true
  },
  "plugins": [
    "meteor"
  ],
  "env": {
    "browser": true
  },
  "extends": [
    "airbnb",
    "plugin:meteor/recommended"
  ],
  "settings": {
    "import/resolver": "meteor"
  },
  "rules": {
    "max-len": [
      "error",
      120
    ],
    "linebreak-style": "off",
    "no-param-reassign": [
      "off"
    ],
    "no-underscore-dangle": [
      "off"
    ],
    "no-unused-vars": [
      "error"
    ],
    "no-warning-comments": [
      "warn",
      {
        "terms": [
          "todo",
          "fixme",
          "xxx"
        ],
        "location": "anywhere"
      }
    ],
    "prefer-arrow-callback": "off",
    "react/prefer-stateless-function": [1],
    "import/extensions": [
      "off",
      "never"
    ],
    "import/no-absolute-path": 0,
    "import/no-extraneous-dependencies": [
      "off"
    ],
    "import/prefer-default-export": [
      "off"
    ]
  }
}
